{
    "extends": [
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "react",
      "prettier"
    ],
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "no-console": "off",
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "always",
          "printWidth": 80,
          "tabWidth": 2,
          "useTabs": false,
          "semi": true,
          "singleQuote": true,
          "trailingComma": "es5",
          "bracketSpacing": true,
          "jsxBracketSameLine": false,
          "arrowParens": "avoid"
        }
      ]
    }
  }
